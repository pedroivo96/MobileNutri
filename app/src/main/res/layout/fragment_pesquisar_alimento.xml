<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    tools:context="com.example.pedro.mobilenutri.Visao.PesquisarAlimentoFragment">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/nomeAlimento"
        android:hint="Digite o nome do alimento"
        android:layout_marginBottom="25dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/pesquisarAlimento"
        android:text="Pesquisar Alimento"/>

</LinearLayout>
